<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
	<category label="General">
		<setting id="reverseorder" type="labelenum" label="Episode order" values="Ascending|Descending" default="Descending"/>
		<setting id="displaystyle" type="labelenum" label="Display episodes as" values="Directory|List" default="List"/>
		<setting id="searchhistory" type="labelenum" label="Enable search history" values="Yes|No" default="Yes"/>
	</category>
	<category label="Servers">
		<setting id="serverstreamango" type="bool" label="Use Streamango" default="true"/>
		<setting id="serverrapid" type="bool" label="Use RapidVideo" default="true"/>
		<setting id="servermycloud" type="bool" label="Use MyCloud" default="true"/>
		<setting id="serveropenload" type="bool" label="Use OpenLoad" default="true"/>
		<setting id="prefres" label="Prefere Resolution" type="labelenum" values="360p|480p|720p|1080p" default="1080p"/>
		<setting id="autoplay" label="Automatically play first result" type="bool" default="false"/>
	</category>
	<category label="Episode Tracking">
		<setting id="episodetracking" type="labelenum" label="Episode Tracking" values="9anime|MyAnimeList|Kitsu|No Tracking" default="No Tracking"/>
	</category>
	<category label="9anime Login">
		<setting type="lsep" label="9anime Login"/>
        	<setting id="9anime.username" type="text" label="Username:" default=""/>
        	<setting id="9anime.password" type="text" option="hidden" label="Password:" default=""/>
		<setting id="9anime.login" type="action" label="Click to Login..." option="close" action="RunPlugin(plugin://plugin.video.9anime/login)"/>		

		<setting type="lsep" label="9anime Login TLD"/>
		<setting id="9anime.login_tld" type="text" label="Domain Prefix" default="www8"/>
	</category>
	<category label="Kitsu Login">
		<setting type="lsep" label="Kitsu Login"/>
        	<setting id="kitsu.email" type="text" label="Email:" default=""/>
        	<setting id="kitsu.password" type="text" option="hidden" label="Password:" default=""/>
		<setting id="kitsu.login" type="action" label="Click to Login..." option="close" action="RunPlugin(plugin://plugin.video.9anime/kitsu_login)"/>

		<setting type="lsep" label="Kitsu Logout"/>
		<setting id="kitsu.logout" type="action" label="Click to Logout..." option="close" action="RunPlugin(plugin://plugin.video.9anime/kitsu_logout)"/>
	</category>
	<category label="MyAnimeList Login">
		<setting type="lsep" label="MyAnimeList Login"/>
        	<setting id="mal.username" type="text" label="Username:" default=""/>
        	<setting id="mal.password" type="text" option="hidden" label="Password:" default=""/>
		<setting id="mal.login" type="action" label="Click to Login..." option="close" action="RunPlugin(plugin://plugin.video.9anime/mal_login)"/>
	
		<setting type="lsep" label="MyAnimeList Logout"/>
		<setting id="mal.logout" type="action" label="Click to Logout..." option="close" action="RunPlugin(plugin://plugin.video.9anime/mal_logout)"/>
	</category>
</settings>
